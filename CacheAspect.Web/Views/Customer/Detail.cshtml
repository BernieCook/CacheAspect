@model CacheAspect.Web.Models.CustomerModel.DetailModel
@{
    ViewBag.Title = @Model.ContactName + " - Cache Aspect";
}

<h2>@Model.ContactName</h2>

@using (Html.BeginForm()) 
{
    @Html.HiddenFor(m => m.CustomerId)
    
    <div class="control-group">
        @Html.LabelFor(m => m.CustomerId, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.CustomerId, new { @class = "input-medium", disabled = "disabled" })
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.CompanyName, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.CompanyName, new { @class = "input-xlarge" })
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.ContactName, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.ContactName, new { @class = "input-large" })
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.ContactTitle, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.ContactTitle, new { @class = "input-large" })
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn btn-primary">Edit Customer Details</button>
            <a href="@Url.Action("Index", "Customer")" class="btn">Cancel</a>
        </div>
    </div>
}
